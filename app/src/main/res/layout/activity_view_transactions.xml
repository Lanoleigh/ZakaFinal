<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.ViewTransactions"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient_green"
    android:padding="16dp">

    <!-- Top Bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:padding="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="View Transactions"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#AA8800" />
    </RelativeLayout>

    <!-- Date Filter -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <EditText
            android:id="@+id/startDate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Start Date"
            android:focusable="false"
            android:clickable="true"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:textColor="#000" />


        <Space android:layout_width="8dp" android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/endDate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="End Date"
            android:focusable="false"
            android:clickable="true"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:textColor="#000" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="E.g 25/04/2025"
            android:textColor="#888888"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E.g 25/05/2025"
            android:textColor="#888888"
            android:textSize="12sp" />
    </LinearLayout>


    <Button
        android:id="@+id/sortButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sort Transactions"
        android:textColor="@color/zakaWhite"
        android:textStyle="bold"
        android:background="@drawable/button_dark_green"
        android:layout_marginTop="12dp" />


    <!-- RecyclerView Placeholder -->
    <LinearLayout
        android:id="@+id/sampleTransactions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"/>
    <!-- Transactions List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/transactionsRecyclerView"
        android:layout_width="374dp"
        android:layout_height="421dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:overScrollMode="never" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
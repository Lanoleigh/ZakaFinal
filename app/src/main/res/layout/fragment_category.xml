<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.Fragments.CategoryFragment">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="ExtraText">

            <!-- Top Bar -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/pageTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Expense Categories"
                    android:textColor="#AA8800"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.05" />
            </RelativeLayout>

            <!-- Main Categories Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Main Categories"
                android:textColor="@color/zakaDarkGreen"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center" />

            <!-- Category Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:background="@drawable/card_category2"
                android:elevation="4dp">

                <!-- Green Header with Category and Amount -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/header_green"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/categoryTitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expense: Home"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:id="@+id/amountLeft1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/categoryTitle1"
                        android:layout_marginBottom="-21dp"
                        android:text="R200 left of R600"
                        android:textColor="@color/zakaYellow"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <!-- Card Body -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:text="LIMIT STATUS:"
                        android:textColor="@color/zakaDarkGreen"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:layout_marginTop="12dp"
                        android:layout_margin="12dp"
                        android:progress="60"
                        android:progressDrawable="@drawable/rounded_progress_bar" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:background="@drawable/card_category2"
                android:elevation="4dp">

                <!-- Green Header with Category and Amount -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/header_green"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/categoryTitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expense: Home"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:id="@+id/amountLeft2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/categoryTitle2"
                        android:layout_marginBottom="-21dp"
                        android:text="R200 left of R600"
                        android:textColor="@color/zakaYellow"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <!-- Card Body -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:text="LIMIT STATUS:"
                        android:textColor="@color/zakaDarkGreen"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:layout_marginTop="12dp"
                        android:layout_margin="12dp"
                        android:progress="60"
                        android:progressDrawable="@drawable/rounded_progress_bar" />

                </LinearLayout>
            </LinearLayout> <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:background="@drawable/card_category2"
            android:elevation="4dp">

            <!-- Green Header with Category and Amount -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/header_green"
                android:padding="16dp">

                <TextView
                    android:id="@+id/categoryTitle3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expense: Home"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/amountLeft3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/categoryTitle3"
                    android:layout_marginBottom="-21dp"
                    android:text="R200 left of R600"
                    android:textColor="@color/zakaYellow"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <!-- Card Body -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="LIMIT STATUS:"
                    android:textColor="@color/zakaDarkGreen"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:layout_margin="12dp"
                    android:layout_marginTop="12dp"
                    android:progress="60"
                    android:progressDrawable="@drawable/rounded_progress_bar" />

            </LinearLayout>
        </LinearLayout>
            <TextView
                android:id="@+id/createCategory"
                android:clickable="true"
                android:background="@drawable/ic_edit_nav"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                />
            <!-- Total Budget Text with Icon -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="25dp"


                android:text="TOTAL BUDGET AMOUNT: R "
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/zakaDarkGreen" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>
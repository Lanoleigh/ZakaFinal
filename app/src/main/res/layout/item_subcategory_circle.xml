<!-- subcategory_item.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:background="@drawable/circl_yellow"
    android:gravity="center"
    android:layout_margin="8dp"
    android:elevation="6dp">

    <TextView
        android:id="@+id/subcategoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subcategory"
        android:textColor="#004d00"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/subcategoryBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Budget : R0"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/subcategoryCurrent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current : R0"
        android:textSize="14sp" />
</LinearLayout>
